{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "dist",
    "target": "ES2015",
    "module": "Node16",
    "moduleResolution": "Node16",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "useUnknownInCatchVariables": true,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "exclude": ["jest.config.ts"]
}
